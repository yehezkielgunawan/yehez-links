---
import "../global.css";
import Navbar from "components/Navbar.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="A Personalized Link Collection Site" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="https://res.cloudinary.com/yehez/image/upload/v1710488562/og/anuyyuvxnjynumvmqorp.png"
    />
    <meta name="generator" content={Astro.generator} />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://links.yehezgun.com" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Yehezgun's Links" />
    <meta
      property="og:description"
      content="A Personalized Link Collection Site"
    />
    <meta
      property="og:image"
      content="https://og-v3.yehezgun.com/?title=Yehez%20Links&subtitle=A%20Personalized%20Link%20Collection%20Site&siteName=links.yehezgun.com&bgImage=https://res.cloudinary.com/yehez/image/upload/v1710488562/og/anuyyuvxnjynumvmqorp.png"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="links.yehezgun.com" />
    <meta property="twitter:url" content="https://links.yehezgun.com" />
    <meta name="twitter:title" content="Yehezgun's Links" />
    <meta
      name="twitter:description"
      content="A Personalized Link Collection Site"
    />
    <meta
      name="twitter:image"
      content="https://og-v3.yehezgun.com/?title=Yehez%20Links&subtitle=A%20Personalized%20Link%20Collection%20Site&siteName=links.yehezgun.com&bgImage=https://res.cloudinary.com/yehez/image/upload/v1710488562/og/anuyyuvxnjynumvmqorp.png"
    />

    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />
  </body>
  <footer class="mt-8">
    <hr class="bg-black h-0.5" />
    <a href="https://yehezgun.com"
      >{
        new Date().toLocaleDateString("en-GB", {
          year: "numeric",
        })
      } | Yehezkiel Gunawan</a
    >
  </footer>
</html>
